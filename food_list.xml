<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="FOOD LIST"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/riceimg"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            app:srcCompat="@drawable/rice"
            />

        <TextView
            android:id="@+id/ricetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="RICE"
            android:textStyle="bold"
            android:textSize="15sp" />

        <Button
            android:id="@+id/ricebtn"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Select" />

        <ImageView
            android:id="@+id/curryimg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/currey1" />

        <TextView
            android:id="@+id/currytxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="CURRY"
            android:textStyle="bold"
            android:textSize="15sp" />

        <Button
            android:id="@+id/currybtn"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Select" />


        <ImageView
            android:id="@+id/rotiimg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/roti" />

        <TextView
            android:id="@+id/rotitxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="ROTIs"
            android:textStyle="bold"
            android:textSize="15sp" />

        <Button
            android:id="@+id/rotibtn"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Select" />



        <ImageView
            android:id="@+id/fastimg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/fast_food" />

        <TextView
            android:id="@+id/fasttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="FAST FOOD"
            android:textStyle="bold"
            android:textSize="15sp" />

        <Button
            android:id="@+id/fastbtn"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Select" />



        <ImageView
            android:id="@+id/chineseimg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/chinese" />

        <TextView
            android:id="@+id/chinesetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="CHINESE"
            android:textStyle="bold"
            android:textSize="15sp" />

        <Button
            android:id="@+id/chinesebtn"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Select" />



    </LinearLayout>


</ScrollView>

